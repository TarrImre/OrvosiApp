<Window x:Class="WebApi_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApi_Client"
        mc:Ignorable="d"
        Title="People manager" Height="720" Width="1035"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#44A08D"/>
                <GradientStop Color="#093637" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="People" FontWeight="Bold" Margin="15, 15, 15, 0"/>

        <DataGrid HorizontalScrollBarVisibility="Auto" Grid.Row="1" x:Name="DataGrid" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="600" Width="1035" Loaded="DataGrid_Loaded" IsReadOnly="True"/>

        <Button Grid.Row="2" Content="Add person" Width="100" HorizontalAlignment="Right" Margin="15, 0, 15, 15" Click="AddPerson_Click"/>
     
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="50,0,0,0" Grid.Row="2" VerticalAlignment="Top" Click="Refresh_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="475,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Bejelentkezve, mint: Asszisztens" VerticalAlignment="Top"/>

    </Grid>
</Window>
