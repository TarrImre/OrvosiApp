<Window x:Class="WebApi_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApi_Client"
        mc:Ignorable="d"
        Title="People manager" Height="450" Width="1000">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="People" FontWeight="Bold" Margin="15, 15, 15, 0"/>

        <DataGrid Grid.Row="1" x:Name="DataGrid" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="321" Width="1000" Loaded="DataGrid_Loaded" SelectionChanged="DataGrid_SelectionChanged" IsReadOnly="True"/>

        <Button Grid.Row="2" Content="Add person" Width="100" HorizontalAlignment="Right" Margin="15, 0, 15, 15" Click="AddPerson_Click"/>
     
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="50,0,0,0" Grid.Row="2" VerticalAlignment="Top" Click="Refresh_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="475,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Bejelentkezve, mint: Doctor" VerticalAlignment="Top"/>


    </Grid>
</Window>
